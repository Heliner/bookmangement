<!--pages/adAddBook/adAddBook.wxml-->
<view class='certain'>
    <view class='logo'>
      <image src='/image/logo.png'  
      style="height:100rpx;width:450rpx;float:left" mode='aspectFit'>    
      </image>
      <image class='booklogo' src='/image/booklogo.png'
      style="height:150rpx; width:300rpx; float:left" mode='aspectFit'>        </image>
    </view>
       
    <view class='content'>
       
       <view class='menu_left'>
          <form bindsubmit='goAlterAd'>
            <view class='input'>
             <view class='data'>
                <label>编号</label><input name='adid' bindblur='getInput' value='{{adinfo.adid}}'></input>
             </view>
             <view class='data'>
                <label>用户名</label><input name='adname' value='{{adinfo.adname}}'></input>
             </view >
             <view class='data'>
                <label>密码</label><input name='adpassword' value='{{adinfo.adpassword}}'></input>
             </view>
             <view class='data'>
                <label>电话</label><input name='adphone' value='{{adinfo.adphone}}'></input>
             </view>
            
             <view class='data'>
                <label>邮箱</label><input name='ademail' value='{{adinfo.ademail}}'></input>
             </view>
            
           </view>
           
           <view class='Button'>
             <view class='button'>
               <button class="Btn" name="handup" type='primary'   
               form-type='submit'  bindtap="Handup"
                style='background-color: #419EDC'>确认修改</button> 
             </view>
             <view class='button'>
               <button class="Btn" name="cancel" type='primary'   
               form-type='reset'  bindtap="Cancel"
                style='background-color: #419EDC'>取消</button> 
             </view>
           </view>
         </form>
       
       </view>

    </view>





</view>